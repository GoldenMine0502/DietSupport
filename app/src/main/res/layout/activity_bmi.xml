<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMIActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/GoldenTextView"
            android:text="키"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberDecimal"
            style="@style/GoldenEditText"
            android:id="@+id/bmi_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/GoldenTextView"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:text="cm"
            android:textSize="20sp"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/GoldenTextView"
            android:text="몸무게"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            style="@style/GoldenEditText"
            android:id="@+id/bmi_weight"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/GoldenTextView"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:text="kg"
            android:textSize="20sp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/GoldenTextView"
            android:text="나이"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="number"
            style="@style/GoldenEditText"
            android:id="@+id/bmi_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            style="@style/GoldenTextView"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:text="세"
            android:textSize="20sp"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/GoldenTextView"
            android:text="성별"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:textSize="20sp"
                android:fontFamily="@font/godom"
                android:id="@+id/bmi_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"/>

            <RadioButton
                android:textSize="20sp"
                android:fontFamily="@font/godom"
                android:id="@+id/bmi_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/bmi_calculate"
        style="@style/GoldenButton"
        android:text="계산"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        style="@style/GoldenTextView"
        android:text="BMI: "
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/bmi_result"/>
    <TextView
        style="@style/GoldenTextView"
        android:text="기초대사량: "
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/bmi_result2"/>
</LinearLayout>