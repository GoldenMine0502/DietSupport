<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogs.ScheduleAddActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            style="@style/GoldenTextViewWhite"
            android:layout_gravity="center"
            android:text="날짜"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <Spinner
            style="@style/GoldenSpinner"
            android:layout_gravity="center"
            android:id="@+id/schedule_add_week"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

        <Spinner
            style="@style/GoldenSpinner"
            android:layout_gravity="center"
            android:id="@+id/schedule_add_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_gravity="center"
            style="@style/GoldenTextViewWhite"
            android:text="음식"
            android:textSize="25sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>


        <Spinner
            style="@style/GoldenSpinner"
            android:layout_gravity="center"
            android:id="@+id/schedule_add_food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/schedule_add_confirm"
            style="@style/GoldenButton"
            android:text="확인"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp" />
        <Button
            android:id="@+id/schedule_add_cancel"
            style="@style/GoldenButton"
            android:text="취소"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</LinearLayout>