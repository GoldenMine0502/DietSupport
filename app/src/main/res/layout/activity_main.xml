<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        style="@style/GoldenCardView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_vegetables" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:fontFamily="@font/godom"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Diet Assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>

    <Button
        android:id="@+id/main_bmi"
        android:layout_margin="15dp"
        style="@style/GoldenButton"
        android:text="BMI 계산"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/main_weekly_schedule"
        android:layout_margin="15dp"
        style="@style/GoldenButton"
        android:text="주간 스케줄 관리"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>